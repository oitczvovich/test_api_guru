[flake8]
max-line-length = 88

ignore = 
    E203,
    W503,
    E501,
    C901,

exclude = 
    .git,
    __pycache__,
    build,
    dist,
    .venv,
    venv,
    migrations,
    alembic,
    docs,
    .eggs,
    *.egg-info,

max-complexity = 10
max-function-args = 10

; show-source = True
; statistics = True

; format = default